@typeparam TItem
@if (Items == null)
{
    <p><em>Loading...</em></p>
}
@*else if (Items.Any())
{
    <p><em>Dosn't exist data for showing</em></p>
}*@
else
{
    <table class="table">
        <thead>
            @TableHeader
        </thead>
        <tbody>
            @foreach (var item in Items)
            {
                <tr>@RowTemplate(item)</tr>
            }
        </tbody>
    </table>
}
@code {
    [Parameter]
    public RenderFragment TableHeader { get; set; }

    [Parameter]
    public RenderFragment<TItem> RowTemplate { get; set; }

    [Parameter]
    public IReadOnlyList<TItem> Items { get; set; }
}
